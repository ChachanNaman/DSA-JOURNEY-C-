{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX15.0.sdk/System/Library/Frameworks"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang++",  // macOS default compiler (supports C++11+)
